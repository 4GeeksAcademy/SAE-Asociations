  font-weight: 700;
  color: #2c3e50;
  margin: 0;
}

.donation-status {
  padding: 0.25rem 0.75rem;
  border-radius: 2rem;
  font-size: 0.8rem;
  font-weight: 500;
}

.donation-status.completed {
  background: rgba(32, 201, 151, 0.1);
  color: #20c997;
}

.donation-status.pending {
  background: rgba(255, 193, 7, 0.1);
  color: #ffc107;
}

.donation-status.failed {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
}

.donation-content {
  color: #6c757d;
}

.donor-name {
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 0.5rem;
}

.event-name {
  color: #4dabf7;
  margin-bottom: 0.5rem;
}

.donation-description {
  font-style: italic;
  margin-bottom: 1rem;
  opacity: 0.8;
}

.donation-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #6c757d;
  font-size: 0.85rem;
}

.no-content-message {
  text-align: center;
  padding: 3rem;
  background: white;
  border-radius: 1rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.no-content-message i {
  font-size: 3rem;
  margin-bottom: 1rem;
}

@media (max-width: 768px) {
  .association-detail-header {
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
  }

  .association-detail-image {
    width: 120px;
    height: 120px;
  }

  .association-detail-name {
    font-size: 1.75rem;
  }

  .association-detail-description {
    font-size: 1rem;
  }

  .contact-cards,
  .action-cards,
  .stats-cards,
  .donations-grid {
    grid-template-columns: 1fr;
  }

  .stat-card {
    padding: 1rem;
  }

  .stat-icon {
    width: 40px;
    height: 40px;
    font-size: 1.25rem;
  }

  .stat-value {
    font-size: 1.25rem;
  }
}

/* Event Detail Styles */
.event-detail-layout {
  padding: 2rem 0;
}

.event-detail-card {
  background: white;
  border-radius: 1.5rem;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  margin-bottom: 2rem;
}

.event-detail-header {
  position: relative;
  overflow: hidden;
}

.event-detail-image {
  width: 100%;
  height: 400px;
  object-fit: cover;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.event-detail-body {
  padding: 2rem;
}

.event-detail-info {
  margin-bottom: 2rem;
}

.event-detail-title {
  font-size: 2rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 1rem;
}

.event-detail-description {
  font-size: 1.1rem;
  line-height: 1.6;
  color: #6c757d;
}

.event-detail-meta {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
  margin-top: 2rem;
  padding-top: 2rem;
  border-top: 1px solid #e9ecef;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.75rem 1rem;
  background: rgba(77, 171, 247, 0.08);
  border-radius: 0.75rem;
  border-left: 3px solid #4dabf7;
  transition: all 0.3s ease;
  height: 72px; /* Altura fija para todos */
  overflow: hidden; /* Evitar desbordamiento */
}

.meta-item i {
  font-size: 1.1rem;
  color: #4dabf7;
  flex-shrink: 0;
  width: 20px;
  text-align: center;
}

.meta-content {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  min-width: 0; /* Permitir que el contenido se encoja */
  overflow: hidden; /* Contener el texto largo */
}

.meta-label {
  font-size: 0.85rem;
  color: #6c757d;
  font-weight: 500;
  white-space: nowrap; /* Evitar saltos de línea en etiquetas */
}

.meta-value {
  font-size: 0.95rem;
  color: #2c3e50;
  font-weight: 600;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis; /* Truncar con ... si es muy largo */
  display: -webkit-box;
  -webkit-line-clamp: 2; /* Máximo 2 líneas */
  -webkit-box-orient: vertical;
}

.meta-value small {
  display: block;
  margin-top: 0.25rem;
  line-height: 1.1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.event-detail-sidebar {
  background: white;
  border-radius: 1.5rem;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.sidebar-section {
  padding: 2rem;
}

.sidebar-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 1.5rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.capacity-info {
  margin-bottom: 2rem;
}

.capacity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.capacity-label {
  font-size: 1rem;
  color: #6c757d;
}

.capacity-value {
  font-size: 1.1rem;
  font-weight: 600;
  color: #2c3e50;
}

.progress-container {
  margin-bottom: 1rem;
}

.progress-bar-bg {
  width: 100%;
  height: 8px;
  background: #e9ecef;
  border-radius: 4px;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(135deg, #4dabf7 0%, #3498db 100%);
  border-radius: 4px;
  transition: width 0.3s ease;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  border-radius: 1rem;
  font-size: 0.9rem;
  font-weight: 500;
  margin-top: 1rem;
}

.status-indicator i {
  font-size: 1.1rem;
}

.status-available {
  background: rgba(32, 201, 151, 0.1);
  color: #20c997;
}

.status-full {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
}

.status-unlimited {
  background: rgba(77, 171, 247, 0.1);
  color: #4dabf7;
}

.action-buttons {
  margin: 2rem 0;
}

.info-message {
  padding: 1rem;
  background: rgba(77, 171, 247, 0.1);
  border-radius: 1rem;
  color: #4dabf7;
  font-size: 0.9rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin: 1rem 0;
}

.volunteers-section {
  margin-top: 2rem;
  padding-top: 2rem;
  border-top: 1px solid #e9ecef;
}

.volunteers-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 1rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.volunteers-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.volunteer-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 0.75rem;
  background: #f8f9fa;
  border-radius: 1rem;
  transition: all 0.3s ease;
}

.volunteer-item:hover {
  transform: translateX(5px);
  background: #e9ecef;
}

.volunteer-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e9ecef;
  color: #6c757d;
}

.volunteer-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.volunteer-avatar i {
  font-size: 1.5rem;
}

.volunteer-info {
  flex: 1;
  min-width: 0;
}

.volunteer-name {
  font-size: 0.95rem;
  font-weight: 600;
  color: #2c3e50;
  display: block;
  margin-bottom: 0.25rem;
}

.volunteer-date {
  font-size: 0.85rem;
  color: #6c757d;
  display: block;
}

.no-volunteers {
  text-align: center;
  padding: 2rem;
  background: #f8f9fa;
  border-radius: 1rem;
}

.no-volunteers i {
  font-size: 2rem;
  margin-bottom: 1rem;
  display: block;
}

@media (max-width: 768px) {
  .event-detail-image {
    height: 300px;
  }

  .event-detail-title {
    font-size: 1.75rem;
  }

  .event-detail-description {
    font-size: 1rem;
  }

  .event-detail-meta {
    grid-template-columns: 1fr;
    gap: 0.75rem;
  }

  .meta-item {
    padding: 0.5rem 0.75rem;
  }

  .meta-item i {
    font-size: 1rem;
  }

  .meta-value {
    font-size: 0.9rem;
  }

  .sidebar-section {
    padding: 1.5rem;
  }
}

/* Responsive para Account Settings */
@media (max-width: 768px) {
  .account-settings-container {
    padding: 1rem 0;
  }

  .settings-header {
    padding: 1.5rem;
  }

  .settings-title {
    font-size: 1.5rem;
  }

  .settings-subtitle {
    font-size: 1rem;
  }

  .profile-section {
    padding: 1.5rem;
  }

  .profile-header {
    flex-direction: column;
    text-align: center;
    gap: 1.5rem;
  }

  .profile-info {
    gap: 0.75rem;
    text-align: center;
    align-items: center;
    margin-left: 0;
  }

  .profile-name {
    font-size: 1.5rem;
  }

  .profile-email,
  .profile-phone {
    font-size: 0.9rem;
  }

  .account-settings-container .profile-image-uploader .profile-avatar {
    width: 100px;
    height: 100px;
  }

  .account-settings-container .profile-image-uploader .btn {
    font-size: 0.8rem;
    min-width: 100px;
    padding: 0.4rem 0.8rem;
  }

  .settings-actions {
    padding: 0 1.5rem 1.5rem;
  }

  .action-btn {
    min-width: 100%;
    padding: 0.5rem 1rem;
    font-size: 0.8rem;
  }

  .form-section {
    padding: 0 1.5rem 1.5rem;
  }

  .profile-form,
  .password-form {
    padding: 1.5rem;
  }

  .form-row {
    grid-template-columns: 1fr;
  }

  .form-actions {
    flex-direction: column;
  }

  .form-actions .btn {
    width: 100%;
    justify-content: center;
  }
}

@media (max-width: 576px) {
  .settings-header {
    padding: 1rem;
  }

  .settings-title {
    font-size: 1.25rem;
  }

  .profile-section {
    padding: 1rem;
  }

  .account-settings-container .profile-image-uploader .profile-avatar {
    width: 80px;
    height: 80px;
  }

  .account-settings-container .profile-image-uploader .btn {
    font-size: 0.75rem;
    min-width: 90px;
    padding: 0.3rem 0.6rem;
  }

  .profile-name {
    font-size: 1.25rem;
    text-align: center;
  }

  .profile-info {
    gap: 0.5rem;
    text-align: center;
    align-items: center;
    margin-left: 0;
  }

  .profile-email,
  .profile-phone {
    font-size: 0.85rem;
    text-align: center;
    justify-content: center;
  }

  .settings-actions {
    padding: 0 1rem 1rem;
  }

  .form-section {
    padding: 0 1rem 1rem;
  }

  .profile-form,
  .password-form {
    padding: 1rem;
  }

  .form-control {
    padding: 0.75rem;
    font-size: 0.9rem;
  }
}
